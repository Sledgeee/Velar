@{
    ViewData["Title"] = "Forgot password";
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Login</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="lni lni-home"></i> Home</a></li>
                    <li>Forgot password</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <form asp-controller="Auth" asp-action="SendResetMail" class="card login-form" method="post">
                    <div class="card-body">
                        <div class="title">
                            <h3>Forgot password?</h3>
                            <p>You can reset your password by your email.</p>
                        </div>
                        <div class="form-group input-group">
                            <label for="reg-fn">Email</label>
                            <input class="form-control" type="email" name="email" id="reg-email" required>
                        </div>
                        <div class="button">
                            <p class="text-danger px-0 py-2">@Model</p>
                            <button class="btn" type="submit">Reset</button>
                        </div>
                        <p class="outer-link">
                            You already can login? <a asp-area="" asp-controller="Auth" asp-action="Login">Login </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>