@model int

@{
    Layout = null;
}

<!DOCTYPE html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model - VELAR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LineIcons.3.0.css" />
    <link rel="stylesheet" href="~/css/main.css" />
</head>
<body>
    <!--[if lte IE 9]>
        <p class="browserupgrade">
            You are using an <strong>outdated</strong> browser. Please
            <a href="https://browsehappy.com/">upgrade your browser</a> to improve
            your experience and security.
        </p>
    <![endif]-->

    <div class="preloader">
        <div class="preloader-inner">
            <div class="preloader-icon">
                <span></span>
                <span></span>
            </div>
        </div>
    </div>


    <div class="error-area">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="error-content">
                        <h1>@Model</h1>
                        @if (Model == 404)
                        {
                            <h2>@(Context.Request.Cookies["lang"] == "en" ? "Oops! Page Not Found" : "Упс! Сторінка не знайдена")</h2>
                            <p>@(Context.Request.Cookies["lang"] == "en" 
                                   ? "The page you are looking for does not exist. It might have been moved or deleted"
                                   : "Сторінка, яку ви шукаєте, не існує. Вона може бути переміщеною або видаленою")</p>
                        }
                        else
                        {
                            <h2>@(Context.Request.Cookies["lang"] == "en" ? "Something went wrong" : "Щось пішло не так")</h2>
                            <p>@(Context.Request.Cookies["lang"] == "en" ? "Please, try again" : "Будь-ласка, спробуйте ще раз")</p>
                        }
                        <div class="button">
                            <a asp-area="" asp-action="Index" class="btn">@(Context.Request.Cookies["lang"] == "en" ? "Back to Home" : "Повернутись на головну")</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script>
        window.onload = function () {
            window.setTimeout(fadeout, 500);
        }

        function fadeout() {
            document.querySelector('.preloader').style.opacity = '0';
            document.querySelector('.preloader').style.display = 'none';
        }
    </script>
</body>
</html>