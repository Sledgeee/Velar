@inject IViewLocalizer Localizer

<header class="header navbar-area">
<div class="topbar">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 col-md-4 col-12">
                <div class="top-left">
                    <ul class="menu-top-link">
                        <li>
                            @await Html.PartialAsync("_SelectLanguagePartial")
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-12">
                <div class="top-middle">
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-12">
                <div class="top-end">
                    <div class="user">
                        <i class="lni lni-user"></i>
                        @Localizer["Hello"]
                        <ul class="user-login">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li>
                                    <a asp-area="" asp-controller="Auth" asp-action="Login">@Localizer["SignIn"]</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Auth" asp-action="Register">@Localizer["SignUp"]</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a asp-area="" asp-controller="User" asp-action="Profile">@User.Identity.Name</a>
                                </li>
                                <li>
                                    <a asp-area="" asp-controller="Auth" asp-action="Logout" asp-route-isAuthenticated="@User.Identity.IsAuthenticated">@Localizer["Logout"]</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="header-middle">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-3 col-md-3 col-7">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo/logo.png" alt="Logo">
                </a>
            </div>
            <div class="col-lg-5 col-md-7 d-xs-none">
                <div class="main-menu-search">

                    <div class="navbar-search search-style-5">
                        <div class="search-input">
                            <input type="text" placeholder="@Localizer["SearchBar"]">
                        </div>
                        <div class="search-btn">
                            <button><i class="lni lni-search-alt"></i></button>
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-lg-4 col-md-2 col-5">
                <div class="middle-right-area">
                    <div class="nav-hotline">
                        <i class="lni lni-phone"></i>
                        <h3>
                            @Localizer["Hotline"]
                            <span><a href="tel:+380670779664">(+380) 670 779 664</a></span>
                        </h3>
                    </div>
                    <div class="navbar-cart">
                        <div class="wishlist">
                            <a href="javascript:void(0)">
                                <i class="lni lni-heart"></i>
                                <span class="total-items">0</span>
                            </a>
                        </div>
                        <div class="cart-items">
                            <a href="javascript:void(0)" class="main-btn">
                                <i class="lni lni-cart"></i>
                                <span class="total-items">0</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row align-items-center">
        <div class="col-lg-8 col-md-6 col-12">
            <div class="nav-inner">
                <div class="mega-category-menu">
                    <span class="cat-button"><i class="lni lni-menu"></i>@Localizer["CategoriesTitle"]</span>
                    <ul class="sub-category">
                        <li>
                            <a asp-area="" asp-controller="Shop" asp-action="Index">Electronics <i class="lni lni-chevron-right"></i></a>
                            <ul class="inner-sub-category">
                                <li><a href="#">Digital Cameras</a></li>
                                <li><a href="#">Camcorders</a></li>
                                <li><a href="#">Camera Drones</a></li>
                                <li><a href="#">Smart Watches</a></li>
                                <li><a href="#">Headphones</a></li>
                                <li><a href="#">MP3 Players</a></li>
                                <li><a href="#">Microphones</a></li>
                                <li><a href="#">Chargers</a></li>
                                <li><a href="#">Batteries</a></li>
                                <li><a href="#">Cables & Adapters</a></li>
                            </ul>
                        </li>
                        <li><a href="#">Accessories</a></li>
                        <li><a href="#">Televisions</a></li>
                        <li><a href="#">Best selling</a></li>
                        <li><a href="#">Top 100 offer</a></li>
                        <li><a href="#">Sunglass</a></li>
                        <li><a href="#">Watch</a></li>
                        <li><a href="#">Nan’s product</a></li>
                        <li><a href="#">Home Audio & Theater</a></li>
                        <li><a href="#">Computers & Tablets </a></li>
                        <li><a href="#">Video Games </a></li>
                        <li><a href="#">Home Appliances </a></li>
                    </ul>
                </div>
                <nav class="navbar navbar-expand-lg">
                    <button class="navbar-toggler mobile-menu-btn" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                        <span class="toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                        <ul id="nav" class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index">@Localizer["HomeNav"]</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Shop" asp-action="Index">@Localizer["ShopNav"]</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="About">@Localizer["AboutUsNav"]</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Contact">@Localizer["ContactUsNav"]</a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Faq">@Localizer["FaqNav"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="dd-menu collapsed" href="javascript:void(0)" data-bs-toggle="collapse"
                                   data-bs-target="#submenu-1-3" aria-controls="navbarSupportedContent"
                                   aria-expanded="false" aria-label="Toggle navigation">@Localizer["FileNav"]</a>
                                <ul class="sub-menu collapse" id="submenu-1-3">
                                    <li class="nav-item">
                                        <a asp-area="" asp-controller="File"
                                           asp-action="FileExplorer">@Localizer["FileExplorerSubNav"]</a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-area="" asp-controller="File" asp-action="ChooseFile">@Localizer["FileUploadSubNav"]</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 col-12">

            <div class="nav-social">
                <h5 class="title">@Localizer["FollowUs"]</h5>
                <ul>
                    <li>
                        <a href="javascript:void(0)"><i class="lni lni-facebook-filled"></i></a>
                    </li>
                    <li>
                        <a href="javascript:void(0)"><i class="lni lni-twitter-original"></i></a>
                    </li>
                    <li>
                        <a href="javascript:void(0)"><i class="lni lni-instagram"></i></a>
                    </li>
                    <li>
                        <a href="javascript:void(0)"><i class="lni lni-skype"></i></a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
</div>
</header>
