@{
    ViewData["Title"] = "Upload file";
}

<div class="container py-5">
    <div class="d-flex justify-content-center">
        <form method="post" enctype="multipart/form-data" asp-area="" asp-controller="File" asp-action="FileUpload">
            <div class="row">
                <label for="i-file">Choose file</label>
                <input type="file" name="file" id="i-file"/>
            </div>
            <div class="row py-2">
                <button type="submit">Send</button>
            </div>
        </form>
    </div>
</div>