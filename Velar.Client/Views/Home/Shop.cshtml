@model ShopViewModel
@{
    ViewData["Title"] = "Shop";
}

<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Shop</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="lni lni-home"></i> Home</a></li>
                    <li>Shop</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<section class="product-grids section">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-12">
                <div class="product-sidebar">
                    <div class="single-widget search">
                        <h3>Search Product</h3>
                        <form method="get" asp-controller="Home" asp-action="Search">
                            <input type="text" name="term" placeholder="Search Here...">
                            <button type="submit"><i class="lni lni-search-alt"></i></button>
                        </form>
                    </div>

                    <div class="single-widget">
                        <h3>All Categories</h3>
                        <ul class="list">
                            @foreach (var category in Model.Categories)
                            {
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Shop" asp-route-categoryId="@category.CategoryId">
                                        @category.Name
                                    </a><span>(@category.Products.Count)</span>
                                </li>
                            }
                        </ul>
                    </div>


                    <div class="single-widget range">
                        <h3>Price Range</h3>
                        <input type="range" class="form-range" name="range" step="1" min="100" max="10000" value="10" onchange="rangePrimary.value=value">
                        <div class="range-inner">
                            <label>$</label>
                            <input type="text" id="rangePrimary" placeholder="100" />
                        </div>
                    </div>


                    <div class="single-widget condition">
                        <h3>Filter by Price</h3>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault1">
                            <label class="form-check-label" for="flexCheckDefault1">
                                $50 - $100 (@Model.Products.Count(x => x.Price >= 50 && x.Price <= 100))
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault2">
                            <label class="form-check-label" for="flexCheckDefault2">
                                $100 - $500 (@Model.Products.Count(x => x.Price >= 100 && x.Price <= 500))
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault3">
                            <label class="form-check-label" for="flexCheckDefault3">
                                $500 - $1,000 (@Model.Products.Count(x => x.Price >= 500 && x.Price <= 1000))
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault4">
                            <label class="form-check-label" for="flexCheckDefault4">
                                $1,000 and more (@Model.Products.Count(x => x.Price >= 1000))
                            </label>
                        </div>
                    </div>


                    <div class="single-widget condition">
                        <h3>Filter by Vendor</h3>
                        @foreach (var vendor in Model.Vendors)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault11">
                                <label class="form-check-label" for="flexCheckDefault11">
                                    @vendor.Name (@vendor.Products.Count)
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-12">
                <div class="product-grids-head">
                    <div class="product-grid-topbar">
                        <div class="row align-items-center">
                            <div class="col-lg-7 col-md-8 col-12">
                                <div class="product-sorting">
                                    <label for="sorting">Sort by:</label>
                                    <select class="form-control" id="sorting">
                                        <option value="0" selected>Newest - Oldest</option>
                                        <option value="1">Oldest - Newest</option>
                                        <option value="2">Low - High Price</option>
                                        <option value="3">High - Low Price</option>
                                        <option value="4">Average Rating</option>
                                        <option value="5">A - Z Order</option>
                                        <option value="6">Z - A Order</option>
                                    </select>
                                    <h3 class="total-show-product">Showing: <span>
                                        @((Model.ShopPagination.PageNumber - 1) * Model.ShopPagination.PageSize + 1) - @(Model.ShopPagination.PageNumber * Model.ShopPagination.PageSize) items
                                    </span></h3>
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-4 col-12">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <button class="nav-link active" id="nav-grid-tab" data-bs-toggle="tab" data-bs-target="#nav-grid" type="button" role="tab" aria-controls="nav-grid" aria-selected="true"><i class="lni lni-grid-alt"></i></button>
                                        <button class="nav-link" id="nav-list-tab" data-bs-toggle="tab" data-bs-target="#nav-list" type="button" role="tab" aria-controls="nav-list" aria-selected="false"><i class="lni lni-list"></i></button>
                                    </div>
                                </nav>
                            </div>
                        </div>
                    </div>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-grid" role="tabpanel" aria-labelledby="nav-grid-tab">
                            <div class="row">
                                @foreach (var product in Model.Products)
                                {
                                    <div class="col-lg-4 col-md-6 col-12">
                                        <div class="single-product">
                                            <div class="product-image">
                                                <img src="@product.MediumImage" alt="#" loading="lazy">
                                                <div class="button">
                                                    <a asp-area="" asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.ProductId" class="btn"><i class="lni lni-cart"></i> Add to Cart</a>
                                                </div>
                                            </div>
                                            <div class="product-info">
                                                <span class="category">@product.Category.Name</span>
                                                <h4 class="title">
                                                    <a asp-area="" asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.ProductId">@product.Name</a>
                                                </h4>
                                                <ul class="review">
                                                    @for (int i = 0; i < 5; i++)
                                                    {
                                                        <li><i class="lni @(@product.Reviews.Count > 0 ? "lni-star-filled" : "lni-star")"></i></li>
                                                    }
                                                    <li><span>@product.Reviews.Count Review(s)</span></li>
                                                </ul>
                                                <div class="price">
                                                    <span>$@product.Price</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @await Component.InvokeAsync("Pagination", Model.ShopPagination)
                        </div>
                        <div class="tab-pane fade" id="nav-list" role="tabpanel" aria-labelledby="nav-list-tab">
                            <div class="row">
                                @foreach (var product in Model.Products)
                                {
                                    <div class="col-lg-12 col-md-12 col-12">
                                        <div class="single-product">
                                            <div class="row align-items-center">
                                                <div class="col-lg-4 col-md-4 col-12">
                                                    <div class="product-image">
                                                        <img src="@product.MediumImage" alt="#" loading="lazy">
                                                        <div class="button">
                                                            <a asp-area="" asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.ProductId" class="btn">
                                                                <i class="lni lni-cart"></i> Add to
                                                                Cart
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-8 col-md-8 col-12">
                                                    <div class="product-info">
                                                        <span class="category">@product.Category.Name</span>
                                                        <h4 class="title">
                                                            <a asp-area="" asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.ProductId">@product.Name</a>
                                                        </h4>
                                                        <ul class="review">
                                                            @for (int i = 0; i < 5; i++)
                                                            {
                                                                <li><i class="lni @(@product.Reviews.Count > 0 ? "lni-star-filled" : "lni-star")"></i></li>
                                                            }
                                                        </ul>
                                                        <div class="price">
                                                            <span>$@product.Price</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @await Component.InvokeAsync("Pagination", Model.ShopPagination)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
